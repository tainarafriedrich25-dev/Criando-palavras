  <h1>üéØ Complete com as Vogais</h1>
  <p>Escolha a vogal correta para completar a palavra:</p>

  <h2>C _ S _</h2>

  <button class="botao" onclick="verificar('A')">A</button>
  <button class="botao" onclick="verificar('E')">E</button>
  <button class="botao" onclick="verificar('I')">I</button>
  <button class="botao" onclick="verificar('O')">O</button>
  <button class="botao" onclick="verificar('U')">U</button>

  <p id="resultado"></p>
  <p id="pontos">Pontos: 0</p>

  <script>
    let pontos = 0;
    let etapa = 1;

    function verificar(vogal) {

      if (etapa === 1 && vogal === 'A') {
        document.querySelector("h2").innerHTML = "C A S _";
        etapa = 2;
      } 
      else if (etapa === 2 && vogal === 'A') {
        document.querySelector("h2").innerHTML = "CASA";
        document.getElementById("resultado").innerHTML = "‚úÖ Muito bem! Voc√™ completou CASA!";
        pontos += 10;
        document.getElementById("pontos").innerHTML = "Pontos: " + pontos;
        etapa = 3;
      } 
      else {
        document.getElementById("resultado").innerHTML = "‚ùå Tente novamente!";
      }
    }
  </script>

